<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ooooooooooooo"
        android:id="@+id/grid_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/juanpi_main"
        android:textSize="12sp"
        android:text="20.9"
        android:id="@+id/grid_cprice"
        android:layout_below="@+id/grid_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hui"
        android:textSize="8dp"
        android:text="9.9"
        android:id="@+id/grid_oprice"
        android:layout_toRightOf="@+id/grid_cprice"
        android:layout_alignBottom="@+id/grid_cprice"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hui"
        android:textSize="10dp"
        android:text="剩4天"
        android:id="@+id/grid_time_left"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/grid_imageView"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hui"
        android:textSize="12dp"
        android:text="随身WiFi"
        android:id="@+id/grid_title"
        android:layout_below="@+id/grid_time_left"
        android:layout_alignLeft="@+id/grid_cprice"
        android:layout_alignStart="@+id/grid_cprice"
        android:layout_marginTop="3dp"
        android:lines="1"
        android:ellipsize="end"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_pinpai_icon"
        android:layout_alignTop="@+id/grid_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"/>
</RelativeLayout>