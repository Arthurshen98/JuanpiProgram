<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/left_menu_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/left_menu_item_selector">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relative_left_menu_item">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_left_menu_item"
                    android:src="@mipmap/left_menu_home"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:id="@+id/textView4"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView_left_menu_item"
                    android:layout_toEndOf="@+id/imageView_left_menu_item" />

                <TextView
                    android:layout_width="246dp"
                    android:layout_height="1dp"
                    android:background="@color/left_menu_text"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal"

                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </LinearLayout>

