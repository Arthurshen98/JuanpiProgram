<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_allshow"
    tools:context="com.sf.main.juanpiprogram.sf.fragment.AccountLoginFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_cricle_kuang_shape"
        android:id="@+id/linearLayout5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:id="@+id/textView29"
                android:background="@color/personbottomLine"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView26"
                android:src="@mipmap/ic_user_name_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editText_username_login"
                android:layout_alignLeft="@+id/imageView26"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/imageView28"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="30dp"
                android:hint="用户名/手机号"
                android:textSize="14sp"
                android:textColor="@color/left_menu_text"
                android:background="@drawable/login_kuang_edittext_shape"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView28"
                android:src="@mipmap/login_open_popup"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_clear_account1"
                android:src="@mipmap/login_clear_account"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView27"
                android:src="@mipmap/ic_user_pass_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView29"
                android:src="@mipmap/eye_closed_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editText_pass_login"
                android:layout_alignLeft="@+id/imageView27"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/imageView30"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="30dp"
                android:password="true"
                android:hint="请输入密码"
                android:textSize="14sp"
                android:textColor="@color/left_menu_text"
                android:background="@drawable/login_kuang_edittext_shape"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView30"
                android:src="@mipmap/eye_open_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_clear_account2"
                android:src="@mipmap/login_clear_account"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/loginin_btn_circle_shape"
        android:id="@+id/relativeLayout2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_btn_selector"
            android:id="@+id/relativeLayout_loginin_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登 录"
                android:id="@+id/textView32"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:id="@+id/textView_forget_password"
            android:layout_alignParentTop="true"
            android:textColor="@color/left_menu_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView_forget_password">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方账号登录"
                android:textColor="@color/left_menu_text"
                android:id="@+id/textView34"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:id="@+id/textView35"
                android:background="@color/login_btn_line"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView34"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="19dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0.3dp"
                android:background="@color/login_btn_line"
                android:id="@+id/textView36"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="12dp"
                android:layout_alignLeft="@+id/textView34"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/textView34">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:id="@+id/imageView_qq"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/login_qq_selector"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="18dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_weixin"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_weixin_selector"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_weibo"
                    android:layout_width="wrap_content"
                    android:layout_margin="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/login_weibo_selector"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
