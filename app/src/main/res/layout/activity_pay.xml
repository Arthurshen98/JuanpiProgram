<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sf.main.juanpiprogram.sf.activity.PayActivity">
    <RelativeLayout
        android:id="@+id/pay_rela"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <Button
            android:id="@+id/pay_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_selector" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="结算"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:id="@+id/textView29"
            android:background="@color/personbottomLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_below="@+id/pay_rela"
        android:id="@+id/pay_address"
        android:background="@color/juanpi_main"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/pay_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请填写收货地址"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_below="@+id/pay_address"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/pay_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pay_line1"
            android:layout_below="@+id/pay_way"
            android:layout_marginTop="10dp"
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="0.6dp">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rela_alipay"
            android:layout_below="@+id/pay_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/pay_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sell_alipay_icon"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pay_alipay"
                android:layout_toEndOf="@+id/pay_alipay"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/pay_btn_alipay"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pay_btn_selector"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pay_line2"
            android:layout_below="@+id/rela_alipay"
            android:layout_marginTop="10dp"
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="0.6dp">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rela_weixin"
            android:layout_below="@+id/pay_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/pay_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sell_wx_icon"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/pay_wx_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pay_weixin"
                android:layout_toEndOf="@+id/pay_weixin"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:textSize="10sp"
                android:textColor="@color/juanpi_main"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pay_wx_pay"
                android:layout_toEndOf="@+id/pay_wx_pay"
                android:layout_marginStart="20dp" />
            <Button
                android:id="@+id/pay_btn_weixin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pay_btn_selector"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pay_line3"
            android:layout_below="@+id/rela_weixin"
            android:layout_marginTop="10dp"
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="0.6dp">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rela_wx_friend"
            android:layout_below="@+id/pay_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/pay_wx_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sell_wxfriend_icon"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友代付"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pay_wx_friend"
                android:layout_toEndOf="@+id/pay_wx_friend"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/pay_btn_weixin_friend"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pay_btn_selector"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pay_line4"
            android:layout_below="@+id/rela_wx_friend"
            android:layout_marginTop="10dp"
            android:background="@color/hui"
            android:layout_width="match_parent"
            android:layout_height="0.6dp">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rela_yinlian"
            android:layout_below="@+id/pay_line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/pay_yinlian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sell_yinlian_icon"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银联支付"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pay_yinlian"
                android:layout_toEndOf="@+id/pay_yinlian"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/pay_btn_yilian"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pay_btn_selector"/>
        </RelativeLayout>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/pay_rela1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/rela"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pay_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总金额"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/pay_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/juanpi_main"
                android:text="123"
                android:layout_toRightOf="@+id/pay_total"/>
        </RelativeLayout>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/rela"
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="去付款"
            android:textColor="@color/white"
            android:background="@drawable/add_button_style"/>
    </RelativeLayout>
</RelativeLayout>
