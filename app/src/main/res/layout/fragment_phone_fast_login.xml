<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sf.main.juanpiprogram.sf.fragment.PhoneFastLoginFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_cricle_kuang"
        android:id="@+id/linearLayout5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:id="@+id/textView29"
                android:background="@color/personbottomLine"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView26"
                android:src="@mipmap/ic_user_phone_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editText"
                android:layout_alignLeft="@+id/imageView26"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/imageView28"
                android:layout_marginRight="60dp"
                android:hint="请输入手机号"
                android:textSize="14sp"
                android:textColor="@color/left_menu_text"
                android:layout_marginLeft="30dp"
                android:background="@drawable/login_kuang_edittext_shape"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView28"
                android:src="@mipmap/login_open_popup"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView31"
                android:src="@mipmap/login_clear_account"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView27"
                android:src="@mipmap/code_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>


            <EditText
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:id="@+id/editText"
                android:layout_alignLeft="@+id/imageView27"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:textColor="@color/left_menu_text"
                android:layout_marginLeft="30dp"
                android:background="@drawable/login_kuang_edittext_shape"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView31"
                android:src="@mipmap/login_clear_account"
                android:layout_alignTop="@+id/imageView27"
                android:layout_alignRight="@+id/editText"
                android:layout_alignEnd="@+id/editText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:id="@+id/textView37"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                  />

            <TextView
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/login_btn_line"
                android:id="@+id/textView38"
                android:layout_alignParentTop="true"
                android:layout_marginRight="22dp"
                android:layout_toLeftOf="@+id/textView37"
                android:layout_toStartOf="@+id/textView37" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/login_cricle_kuang"
        android:id="@+id/relativeLayout2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_selector">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登 录"
                android:id="@+id/textView32"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
